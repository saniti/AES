# Application Configuration
APP_NAME=Alerte Equine Science
PORT=3000

# API Configuration
API_BASE_URL=https://alerteequinedashboard.azurewebsites.net

# OAuth Configuration
OAUTH_AUTHORITY=https://app-is-prod.azurewebsites.net
OAUTH_CLIENT_ID=equinedashboard_manus_ai
OAUTH_REDIRECT_URI=https://localhost:3000/auth-callback
OAUTH_POST_LOGOUT_REDIRECT_URI=https://localhost:3000/
OAUTH_SCOPE=openid profile email equineapi offline_access

# Demo Mode (for testing without OAuth or API access)
# Set to 'true' to bypass OAuth and use mock data
DEMO_MODE=false

# Session Secret (generate a random string for production)
SESSION_SECRET=your-secret-key-here-change-in-production

# HTTPS Configuration
# Set to 'true' to enable HTTPS (required for OAuth with this provider)
USE_HTTPS=true

# Risk Level Mapping
# Maps API traffic light values to display labels
# Format: API_VALUE:DISPLAY_LABEL
RISK_MAPPING_GREEN=Low Risk
RISK_MAPPING_YELLOW=Medium Risk
RISK_MAPPING_RED=High Risk
RISK_MAPPING_DEFAULT=Low Risk
